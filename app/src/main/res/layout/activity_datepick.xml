<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_navibar"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.android.widget_extra.picker.ICIDateAndTimePicker
                android:id="@+id/ici_date_timepick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="166px"
                android:gravity="center"></com.android.widget_extra.picker.ICIDateAndTimePicker>

            <com.android.widget_extra.picker.ICIDatePicker
                android:id="@+id/ici_datepick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="166px"
                android:gravity="center"></com.android.widget_extra.picker.ICIDatePicker>

            <com.android.widget_extra.picker.ICIMonthPicker
                android:id="@+id/ici_monthpick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="166px"
                android:gravity="center"></com.android.widget_extra.picker.ICIMonthPicker>

            <com.android.widget_extra.picker.ICITimePicker
                android:id="@+id/ici_timehpick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="166px"
                android:gravity="center"></com.android.widget_extra.picker.ICITimePicker>

        </LinearLayout>

    </ScrollView>
</LinearLayout>