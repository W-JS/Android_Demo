<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ici_searchbar_icon"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25px"
        android:padding="10px"></ImageView>

    <EditText
        android:id="@+id/ici_searchbar_edit"
        android:layout_width="518px"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="130px"
        android:background="@null"
        android:lines="1"
        android:textColor="@color/ici_white"
        android:textCursorDrawable="@null"
        android:textSize="38px" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80px"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <com.android.widget_extra.button.ICIIconButton
            android:id="@+id/ici_Searchbar_delete"
            android:layout_width="98px"
            android:layout_height="80px"
            android:paddingLeft="10px"
            android:paddingTop="19px"
            android:paddingRight="10px"
            android:paddingBottom="19px"
            android:visibility="gone" />

        <View
            android:id="@+id/ici_searchbar_split"
            android:layout_width="2px"
            android:layout_height="43px"
            android:layout_gravity="center_vertical"
            android:visibility="gone" />

        <com.android.widget_extra.button.ICIIconButton
            android:id="@+id/ici_searchbar_voice"
            android:layout_width="98px"
            android:layout_height="80px"
            android:layout_marginRight="9px"
            android:paddingLeft="10px"
            android:paddingTop="19px"
            android:paddingRight="10px"
            android:paddingBottom="19px"
            android:visibility="gone" />
    </LinearLayout>
</merge>